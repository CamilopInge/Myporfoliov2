---
import Cardexperience from "../cards/Cardexperience.astro";
import Badgetecnologia from "../bagde/Badgetecnologi.astro";
import experiences from "../../data/en/experiences.json";
---

<div>
    <ol class="group/list">
        {
            experiences.map((exp, index) => (
                <li class="mb-12">
                    <Cardexperience date={exp.date}>
                        <span slot="title">
                            {exp.title} Â·{" "}
                            <a
                                href={exp.companyUrl}
                                target="_blank"
                                rel="noreferrer noopener"
                                class="text-slate-500 dark:text-slate-500 hover:text-[#FD7014] dark:hover:text-[#FD7014] focus-visible:text-[#FD7014]"
                            >
                                {exp.company}
                            </a>
                        </span>
                        <span slot="content">{exp.content}</span>
                        <span slot="badges">
                            {exp.technologies.map((tech, i) => (
                                <Badgetecnologia>{tech}</Badgetecnologia>
                            ))}
                        </span>
                    </Cardexperience>
                </li>
            ))
        }
    </ol>
</div>
