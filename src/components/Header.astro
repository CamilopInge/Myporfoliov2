---
import Btnarrow from "../components/buttoms/Btnarrow.astro";
import Btnnavbar from "../components/buttoms/Btnnavbar.astro";
import Grpbtnsocial from "../components/buttoms/Grpbtnsocial.astro";
import Avatar from "../components/avatar/Avatar.astro";
---

<header
  class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
>
  <div>
    
    <h1 class="text-4xl font-bold tracking-tight text-slate-200 sm:text-5xl">
    
      <Avatar /><a href="/">Hi! i'm Camilo</a>
    </h1>
    <h2
      class="mt-3 text-lg font-medium tracking-tight text-slate-200 sm:text-xl"
    >
      Student System Engineer
    </h2>
    <p class="mt-4 max-w-xs leading-normal">
      Desarrollo experiencias digitales fluidas, eficientes y fáciles de usar,
      manejando tanto el frontend como el backend para garantizar una solución
      coherente y confiable.
    </p>

    <nav class="nav hidden lg:block" aria-label="In-page jump links">
      <ul class="mt-10 w-max">
        <li class="group flex items-center py-3 active">
          <Btnnavbar href="">
            <span
              class="nav-text text-xs font-bold uppercase tracking-widest text-slate-500 group-hover:text-slate-200 group-focus-visible:text-slate-200"
              >About</span
            >
          </Btnnavbar>
        </li>
        <li class="group flex items-center py-3 active">
          <Btnnavbar href="">
            <span
              class="nav-text text-xs font-bold uppercase tracking-widest text-slate-500 group-hover:text-slate-200 group-focus-visible:text-slate-200"
              >Experience</span
            >
          </Btnnavbar>
        </li>
        <li class="group flex items-center py-3 active">
          <Btnnavbar href="">
            <span
              class="nav-text text-xs font-bold uppercase tracking-widest text-slate-500 group-hover:text-slate-200 group-focus-visible:text-slate-200"
              >Projects</span
            >
          </Btnnavbar>
        </li>
      </ul>

    </nav>
    <Btnarrow>
      <span class="absolute -start-full transition-all group-hover:start-4">
        <svg
          class="size-5 rtl:rotate-180"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </span>
      <span class="text-sm font-medium transition-all group-hover:ms-4">
        Check CV
      </span>
    </Btnarrow>
    
    <Grpbtnsocial />

  </div>
</header>
